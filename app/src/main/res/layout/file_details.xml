<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundblackcolor"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/llmain"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imgmain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="05dip" />

            <TextView
                android:id="@+id/txtmain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="20dip"
                android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:singleLine="true"
                android:textColor="@color/backgroundwhitecolor"
                android:textSize="@dimen/textnormalsize"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llmainline"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/backgroundwhitecolor"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txtnamelbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dip"
                android:text="@string/Name"
                android:textColor="@color/backgroundwhitecolor"
                android:textSize="@dimen/textnormalsize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="05dip"
                android:textColor="@color/backgroundwhitecolor"
                android:textSize="@dimen/textnormalsize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txtpathlbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dip"
                android:text="@string/path"
                android:textColor="@color/backgroundwhitecolor"
                android:textSize="@dimen/textnormalsize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtpath"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="05dip"
                android:textColor="@color/backgroundwhitecolor"
                android:textSize="@dimen/textnormalsize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txtsizelbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dip"
                android:text="@string/size"
                android:textColor="@color/backgroundwhitecolor"
                android:textSize="@dimen/textnormalsize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtsize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="05dip"
                android:textColor="@color/backgroundwhitecolor"
                android:textSize="@dimen/textnormalsize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txtitemslbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dip"
                android:text="@string/Items"
                android:textColor="@color/backgroundwhitecolor"
                android:textSize="@dimen/textnormalsize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtitems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="05dip"
                android:textColor="@color/backgroundwhitecolor"
                android:textSize="@dimen/textnormalsize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txtpermissionlbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dip"
                android:text="@string/Permissions"
                android:textColor="@color/backgroundwhitecolor"
                android:textSize="@dimen/textnormalsize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtpermission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="05dip"
                android:textColor="@color/backgroundwhitecolor"
                android:textSize="@dimen/textnormalsize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txtmodifiedlbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dip"
                android:text="@string/Modified"
                android:textColor="@color/backgroundwhitecolor"
                android:textSize="@dimen/textnormalsize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtmodified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="05dip"
                android:textColor="@color/backgroundwhitecolor"
                android:textSize="@dimen/textnormalsize" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llextract"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnok"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/OK"
                android:textSize="@dimen/textlargesize"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>