<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundmaincolor"
    android:orientation="horizontal" >

    <ImageButton
        android:id="@+id/imgbtnmain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center"
        android:layout_margin="05dip"
        android:background="@drawable/icon_32_32"
        android:gravity="center" />

    <TextView
        android:id="@+id/txtheadingname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="30dip"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="@string/Info"
        android:textColor="@color/textblackcolor"
        android:textSize="@dimen/textnormalsize"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imgbtninfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center"
        android:layout_margin="05dip"
        android:background="@drawable/infochangeimage"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="01dip"
        android:layout_gravity="bottom"
        android:layout_marginTop="10dip"
        android:background="@color/backgraycolor"
        android:gravity="bottom"
        android:orientation="vertical" >
    </LinearLayout>

</FrameLayout>