<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minHeight="250dp"
    android:minWidth="300dp"
    android:orientation="vertical"
    android:padding="5dp" >

    <TextView
        android:id="@+id/main_label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dip"
        android:layout_marginRight="10dip"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="left"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="data"
        android:textColor="@color/backgroundwhitecolor"
        android:textSize="@dimen/textlargesize"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/input_labelPath"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="05dip"
            android:gravity="left"
            android:text="@string/path"
            android:textColor="@color/backgroundwhitecolor" />

        <TextView
            android:id="@+id/input_label"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="05dip"
            android:text="path will go here "
            android:textColor="@color/backgroundwhitecolor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/input_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="05dip"
            android:layout_weight="4" />

        <EditText
            android:id="@+id/edtboxinput"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="05dip"
            android:layout_weight="1"
            android:inputType="none" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="05dip"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/input_create_b"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="true"
           android:textStyle="bold"
			android:textColor="@color/backgroundblackcolor"
            android:text="Create" />

        <Button
            android:id="@+id/input_cancel_b"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="true"
            android:textStyle="bold"
			android:textColor="@color/backgroundblackcolor"
            android:text="Cancel" />
    </LinearLayout>

</LinearLayout>